{
  "name": "star-challenge",
  "homepage": "https://antkazam.github.io/star-challenge",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "fetch-retry": "^1.2.0",
    "react": "^16.2.0",
    "react-awesome-button": "^3.0.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.1.1"
  },
  "devDependencies": {
    "gh-pages": "^1.1.0",
    "wt-cli": "^9.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "deploy": "yarn build && gh-pages -d build",
    "eject": "react-scripts eject",
    "check-env": "if [ ! -f .env ]; then cp .env.example .env; echo 'ðŸ¤–  *** ACTION REQUIRED: Please update `.env` then try again'; exit 1; fi",
    "wt-init": "wt init",
    "wt-deploy": "yarn --silent check-env && wt create --secrets-file .env webtasks/stars.js",
    "wt-dev": "yarn --silent check-env && wt create --secrets-file .env --watch webtasks/stars.js"
  }
